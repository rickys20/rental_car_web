
<div aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#" style="text-decoration: none; color: black; font-weight: bold;">Cars</a></li>
        <li class="breadcrumb-item  active"><a href="#" style="text-decoration: none; color: black; ">List Car</a></li>
    </ol>
</div>
<div class="d-flex justify-content-between">
    <p style="font-weight: bold; font-size: large;"> List Car</p>
    <a type="button" class="add-new" href="/add">+  Add New Car</a>
</div>
<a type="button" href="/" class="btn btn-outline-primary">All</a>
<a type="button" href="/filter/small" class="btn btn-outline-primary">Small</a>
<a type="button" href="/filter/medium" class="btn btn-outline-primary">Medium</a>
<a type="button" href="/filter/large" class="btn btn-outline-primary">Large</a>
<div class="row">
    <% cars2.forEach(element => { %>
        <div class="col-sm-4 mt-4">
            <div class="card"style="height:500px">
                <img src="<%= element.img %>" height="200px" style="object-fit: cover;">
                <div class="card-body">
                  <h5 class="card-title"><%= element.nameCar %> / <%= element.typeCar %></h5>
                  <p class="card-text">Rp <%= element.price %> / hari</p>
                  <p class="card-text">Update At : <%= element.updatedAt %></p>
                  <a href="/update/<%= element.id %>" class="btn btn-primary">Edit</a>
                  <a type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Delete
                  </a>
                  
                  <!-- Modal -->
                  <div class="modal " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Hapus Data</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          Anda yakin aka menghapus ini?
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          <a href="/delete/<%= element.id %>" class="btn btn-primary">Delete</a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- <a href="/delete/<%= element.id %>" class="btn btn-primary">Delete</a> -->
                </div>
              </div>
        </div>
    <% }) %>  
</div>
